<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="second_title_text_model">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="dialog_sure_text" parent="second_title_text_model">
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/sure_btn</item>
    </style>
    
    <style name="dialog_cancel_text" parent="second_title_text_model">
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/cancel_btn</item>
    </style>
    
    <style name="first_content_text_model">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/content_gray</item>
        <item name="android:paddingLeft">@dimen/normal_margin</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    
    <style name="directory_text_model">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">#000</item>
        <item name="android:paddingLeft">@dimen/normal_margin</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    
</resources>
